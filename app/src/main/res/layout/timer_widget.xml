<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="match_parent"
    android:padding="@dimen/widget_margin" android:background="@drawable/widget_medium">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="11"
        android:id="@+id/tvDia"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="11"
        android:id="@+id/tvHora"
        android:layout_alignBottom="@+id/tvDia"
        android:layout_toRightOf="@+id/tvDia"
        android:layout_toEndOf="@+id/tvDia"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="11"
        android:id="@+id/tvMin"
        android:layout_alignTop="@+id/tvHora"
        android:layout_toRightOf="@+id/tvHora"
        android:layout_toEndOf="@+id/tvHora"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="11"
        android:id="@+id/tvSeg"
        android:layout_alignBottom="@+id/tvMin"
        android:layout_toRightOf="@+id/tvMin"
        android:layout_toEndOf="@+id/tvMin"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/titulo1"
        android:layout_above="@+id/tvDia"
        android:layout_toRightOf="@+id/tvDia"
        android:layout_toEndOf="@+id/tvDia"
        android:layout_marginBottom="15dp" />

</RelativeLayout>