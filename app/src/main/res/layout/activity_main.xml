<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/background_medium"
    android:id="@+id/mainlayout">


    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Hora/s"
                android:id="@+id/horaText"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textAlignment="center"
                android:layout_alignTop="@+id/diaText"
                android:layout_toRightOf="@+id/diaText"
                android:layout_toEndOf="@+id/diaText"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp"
        android:gravity="center" />

    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="XX"
                android:id="@+id/segCount"
                android:textColor="#ffffff"
                android:layout_marginLeft="23dp"
                android:layout_marginStart="23dp"
                android:layout_alignTop="@+id/minCount"
                android:layout_alignLeft="@+id/segText"
                android:layout_alignStart="@+id/segText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="River esta jugando!"
                android:id="@+id/riverJuega"
                android:layout_above="@+id/horaCount"
                android:layout_alignLeft="@+id/horaCount"
                android:layout_alignStart="@+id/horaCount"
                android:textColor="#ffffff"
                android:visibility="invisible" />

    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Dia/s"
                android:id="@+id/diaText"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textAlignment="center"
                android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="89dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Titulo Dinamico 1"
        android:id="@+id/title1"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_above="@+id/title2"
        android:textSize="30sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp" />

    <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Texto Dinamico 2"
                android:id="@+id/text2"
                android:textColor="#ffffff"
                android:gravity="center"
        android:layout_marginBottom="62dp"
        android:layout_above="@+id/riverJuega"
        android:layout_alignLeft="@+id/text1"
        android:layout_alignStart="@+id/text1" />

    <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Texto Dinamico 1"
                android:id="@+id/text1"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_above="@+id/text2"
                android:layout_toStartOf="@+id/segCount"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Titulo Dinamico 2"
        android:id="@+id/title2"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_marginBottom="107dp"
        android:layout_above="@+id/text1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="XX"
        android:id="@+id/dayCount"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:layout_alignBaseline="@+id/horaCount"
        android:layout_alignBottom="@+id/horaCount"
        android:layout_toLeftOf="@+id/horaText"
        android:layout_toStartOf="@+id/horaText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Minuto/s"
        android:id="@+id/minText"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_alignBaseline="@+id/horaText"
        android:layout_alignBottom="@+id/horaText"
        android:layout_toLeftOf="@+id/segText"
        android:layout_toStartOf="@+id/segText"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="XX"
                android:id="@+id/minCount"
                android:textColor="#ffffff"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/minText"
        android:layout_alignLeft="@+id/minText"
        android:layout_alignStart="@+id/minText"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="XX"
                android:id="@+id/horaCount"
                android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/minCount"
        android:layout_alignBottom="@+id/minCount"
        android:layout_alignLeft="@+id/horaText"
        android:layout_alignStart="@+id/horaText"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Segundos"
        android:id="@+id/segText"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_alignBaseline="@+id/minText"
        android:layout_alignBottom="@+id/minText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
